!include "$(LIB3270_SDK_PATH)\share\pw3270\def\lib3270.mak"

.cc.obj:
	@echo $@ ...
	@$(CPP) \
		/c \
		/DPACKAGE_NAME=\"ipc3270\" \
		/DPRODUCT_NAME=\"$(PRODUCT_NAME)\" \
		/DLIB3270_NAME=\"$(LIB3270_NAME)\" \
		/DNDEBUG=1 \
		/I".\src\include" \
		/I"$(LIB3270_SDK_PATH)\include" \
		/EHsc \
		/Fo"$@" \
		$<

all: \
	ipc3270.dll \
	ipc3270.static.lib

install: \
	ipc3270.dll \
	ipc3270.static.lib \
	$(LIB3270_NAME).lib
	@echo Building library...

	@-mkdir "$(DESTDIR)"
	@-mkdir "$(DESTDIR)\lib"
	@copy /Y "$(LIB3270_NAME).lib" "$(DESTDIR)\lib\$(LIB3270_NAME).lib"
	@copy /Y "ipc3270.static.lib" "$(DESTDIR)\lib\ipc3270.static.lib"
	@copy /Y "ipc3270.dll.lib" "$(DESTDIR)\lib\ipc3270.dll.lib"

	@-mkdir "$(DESTDIR)\bin"
	@copy /Y "ipc3270.dll" "$(DESTDIR)\bin\ipc3270.dll"

	@-mkdir "$(DESTDIR)\include"
	@-mkdir "$(DESTDIR)\include\lib3270"
	@-mkdir "$(DESTDIR)\include\lib3270\ipc"
	@copy /Y "src\include\lib3270\ipc\*.h" "$(DESTDIR)\include\lib3270\ipc"
	@copy /Y "src\include\lib3270\*.h" "$(DESTDIR)\include\lib3270"

	@xcopy /s /y "$(LIB3270_SDK_PATH)\include\lib3270" "$(DESTDIR)\include\lib3270"

testprogram.exe: \
	src\testprogram\testprogram.obj \
	ipc3270.dll
	
	@echo Build exe file....
	link \
		/nologo \
		/OUT:"$@" \
		src\testprogram\testprogram.obj

ipc3270.static.lib: \
	src/core/*.cc \
	src/core/windows/*.cc \
	src/host/*.cc \
	src/session/*.cc \
	src/session/local/*.cc \
	src/session/remote/*.cc \
	src/session/remote/windows/*.cc
	@$(MAKE) \
		/f win\Makefile-ci.msc \
		$(**:.cc=.obj)

	@lib \
		/NOLOGO \
		/OUT:"$@" \
		$(**:.cc=.obj) \

ipc3270.dll: \
	src/core/*.cc \
	src/core/windows/*.cc \
	src/core/windows/dynamic/*.cc \
	src/host/*.cc \
	src/session/*.cc \
	src/session/local/*.cc \
	src/session/remote/*.cc \
	src/session/remote/windows/*.cc \
	$(LIB3270_NAME).lib
	@$(MAKE) \
		/f win\Makefile-ci.msc \
		$(**:.cc=.obj)

	@link \
		/NOLOGO \
		/DLL \
		/OUT:"$@" \
		/IMPLIB:ipc3270.dll.lib \
		$(**:.cc=.obj) \
		/DELAYLOAD:$(LIB3270_NAME).dll

$(LIB3270_NAME).lib:
	lib \
		/def:"$(LIB3270_SDK_PATH)\share\pw3270\def\$(LIB3270_NAME).def" \
		/out:$(LIB3270_NAME).lib

clean: \
	src\core\*.cc \
	src\core\windows\*.cc \
	src\core\windows\dynamic\*.cc \
	src\host\*.cc \
	src\session\*.cc \
	src\session\local\*.cc \
	src\session\remote\*.cc \
	src\session\remote\windows\*.cc
	del /Q \
		*.lib \
		*.dll \
		$(**:.cc=.obj) \
		testprogram.*
