// See https://go.microsoft.com/fwlink/?LinkId=733558 
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msvc build",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/favor:AMD64",
                "/c",
                "/EHsc",
                "/I","${workspaceFolder}/client/src/include",
                "/I","${workspaceFolder}/common/src/include",
                "/I","C:/Program Files/pw3270/sdk/include",
                "/I","${env:VCPKG_ROOT}/x64-windows-static/include",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
  }